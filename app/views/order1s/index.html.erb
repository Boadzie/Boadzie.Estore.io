<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Order1s</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Pay type</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @order1s.each do |order1| %>
        <tr>
          <td><%= order1.name %></td>
          <td><%= order1.address %></td>
          <td><%= order1.email %></td>
          <td><%= order1.pay_type %></td>
          <td><%= link_to 'Show', order1,  class:"btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_order1_path(order1),  class:"btn btn-success" %></td>
          <td><%= link_to 'Destroy', order1, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Order', new_order1_path,  class:"btn btn-success" %>
</div>