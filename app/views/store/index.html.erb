  <div class="container">
    <p id="notice"><%= notice %></p>
    <h1 class="page-header"><i class="fa fa-shopping-cart"></i> Buy Your Awesome Phones</h1>
  </div>

     <div class="container">
      <% @products.each_slice(4) do |products| %>
        <div class="row">
          <% products.each do |product| %>
            <div class="col-md-3">
              <%= image_tag(product.image_url, :class => "image-size") %>
                <h5 class="bold"><%= product.title %></h5>
                <%= sanitize(product.description) %>
              <span class="btn btn-success btn-block"><%= number_to_currency(product.price) %></span>
            </div>
          <% end %>
        </div>
       <% end %>
     </div>

